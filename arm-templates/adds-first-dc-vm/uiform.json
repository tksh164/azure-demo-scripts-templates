{
    "$schema": "https://schema.management.azure.com/schemas/2021-09-09/uiFormDefinition.schema.json#",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "Deploy a domain controller VM into a VNet",
            "steps": [
                {
                    "name": "basics",
                    "label": "Basics",
                    "description": "This template will deploy an AD DS first domain controller into a virtual network.",
                    "elements": [
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope",
                            "location": {
                                "label": "Region for AD DS VM",
                                "toolTip": "Specify the region to deploy the AD DS domain controller VM."
                            }
                        }
                    ]
                },
                {
                    "name": "virtualNetwork",
                    "label": "Virtual network",
                    "description": "Specify the virtual network and the subnet to deploy the AD DS domain controller VM.",
                    "elements": [
                        {
                            "name": "vnetSection",
                            "type": "Microsoft.Common.Section",
                            "visible": true,
                            "label": "",
                            "elements": [
                                {
                                    "name": "vnet",
                                    "type": "Microsoft.Network.VirtualNetworkCombo",
                                    "visible": true,
                                    "label": {
                                        "virtualNetwork": "Virtual network",
                                        "subnets": "Subnets"
                                    },
                                    "toolTip": {
                                        "virtualNetwork": "Specify the virtual network to deploy the AD DS domain controller VM.",
                                        "subnets": "Specify the subnet to deploy the AD DS domain controller VM."
                                    },
                                    "scope": {
                                        "subscriptionId": "[steps('basics').resourceScope.subscription.subscriptionId]",
                                        "resourceGroupName": "[steps('basics').resourceScope.resourceGroup.name]",
                                        "location": "[steps('basics').resourceScope.location.name]"
                                    },
                                    "options": {
                                        "hideExisting": false
                                    },
                                    "defaultValue": {
                                        "name": "adds-vnet",
                                        "addressPrefixSize": "/16"
                                    },
                                    "constraints": {
                                        "minAddressPrefixSize": "/29"
                                    },
                                    "subnets": {
                                        "addsSubnet": {
                                            "label": "Subnet",
                                            "defaultValue": {
                                                "name": "adds",
                                                "addressPrefixSize": "/24"
                                            },
                                            "constraints": {
                                                "minAddressPrefixSize": "/29",
                                                "minAddressCount": 1,
                                                "requireContiguousAddresses": false
                                            }
                                        }
                                    }
                                }
                            ]
                        }
                    ]
                },
                {
                    "name": "adds",
                    "label": "AD DS",
                    "description": "Specify the AD DS configuration.",
                    "elements": [
                        {
                            "name": "domainSection",
                            "type": "Microsoft.Common.Section",
                            "visible": true,
                            "label": "Active Directory domain",
                            "elements": [
                                {
                                    "name": "domainSectionText",
                                    "type": "Microsoft.Common.TextBlock",
                                    "visible": true,
                                    "options": {
                                        "text": "Specify the fully qualified domain name (FQDN) for the new AD DS forest."
                                    }
                                },
                                {
                                    "name": "domainName",
                                    "type": "Microsoft.Common.TextBox",
                                    "visible": true,
                                    "multiLine": false,
                                    "label": "Domain name",
                                    "toolTip": "Specify the FQDN for the new AD DS forest.",
                                    "constraints": {
                                        "required": true
                                    },
                                    "placeholder": "e.g. sub.example.com",
                                    "defaultValue": "lab.contoso.com"
                                }
                            ]
                        },
                        {
                            "name": "adminAccountSection",
                            "type": "Microsoft.Common.Section",
                            "visible": true,
                            "label": "Administrator account",
                            "elements": [
                                {
                                    "name": "adminAccountSectionText",
                                    "type": "Microsoft.Common.TextBlock",
                                    "visible": true,
                                    "options": {
                                        "text": "Specify the administrator account credentials. The credentials are used for the local administrator account on the AD DS domain controller VM and domain administrator account."
                                    }
                                },
                                {
                                    "name": "adminUserName",
                                    "type": "Microsoft.Compute.UserNameTextBox",
                                    "visible": true,
                                    "label": "Username",
                                    "toolTip": "Specify the administrator username.",
                                    "osPlatform": "Windows",
                                    "defaultValue": "vmadmin",
                                    "constraints": {
                                        "required": true
                                    }
                                },
                                {
                                    "name": "adminPassword",
                                    "type": "Microsoft.Compute.CredentialsCombo",
                                    "visible": true,
                                    "label": {
                                        "password": "Password",
                                        "confirmPassword": "Confirm password"
                                    },
                                    "toolTip": {
                                        "password": "Specify the administrator password."
                                    },
                                    "osPlatform": "Windows",
                                    "constraints": {
                                        "required": true
                                    },
                                    "options": {
                                        "hideConfirmation": false
                                    }
                                }
                            ]
                        },
                        {
                            "name": "vmIamgeSection",
                            "type": "Microsoft.Common.Section",
                            "visible": true,
                            "label": "Domain controller VM image",
                            "elements": [
                                {
                                    "name": "vmIamgeSectionText",
                                    "type": "Microsoft.Common.TextBlock",
                                    "visible": true,
                                    "options": {
                                        "text": "Select the VM image for the domain controller VM."
                                    }
                                },
                                {
                                    "name": "vmIamge",
                                    "type": "Microsoft.Common.DropDown",
                                    "visible": true,
                                    "multiselect": false,
                                    "selectAll": false,
                                    "filter": true,
                                    "multiLine": true,
                                    "label": "Image",
                                    "toolTip": "The VM image for the domain controller VM.",
                                    "placeholder": "Select the VM image...",
                                    "defaultDescription": "---",
                                    "filterPlaceholder": "Filter images...",
                                    "defaultValue": "Windows Server 2022 Gen 2 (smalldisk)",
                                    "constraints": {
                                        "required": true,
                                        "allowedValues": [
                                            {
                                                "label": "Windows Server 2022 Gen 2",
                                                "description": "Windows Server 2022 with 127 GiB OS disk for generation 2 VM.",
                                                "value": "2022-datacenter-g2"
                                            },
                                            {
                                                "label": "Windows Server 2022 Gen 2 (smalldisk)",
                                                "description": "Windows Server 2022 with 31 GiB OS disk for generation 2 VM.",
                                                "value": "2022-datacenter-smalldisk-g2"
                                            },
                                            {
                                                "label": "Windows Server 2022 Gen 1",
                                                "description": "Windows Server 2022 with 127 GiB OS disk for generation 1 VM.",
                                                "value": "2022-datacenter"
                                            },
                                            {
                                                "label": "Windows Server 2022 Gen 1 (smalldisk)",
                                                "description": "Windows Server 2022 with 31 GiB OS disk for generation 1 VM.",
                                                "value": "2022-datacenter-smalldisk"
                                            },
                                            {
                                                "label": "Windows Server 2019 Gen 2",
                                                "description": "Windows Server 2019 with 127 GiB OS disk for generation 2 VM.",
                                                "value": "2019-datacenter-gensecond"
                                            },                                            
                                            {
                                                "label": "Windows Server 2019 Gen 2 (smalldisk)",
                                                "description": "Windows Server 2019 with 31 GiB OS disk for generation 2 VM.",
                                                "value": "2019-datacenter-smalldisk-g2"
                                            },
                                            {
                                                "label": "Windows Server 2019 Gen 1",
                                                "description": "Windows Server 2019 with 127 GiB OS disk for generation 1 VM.",
                                                "value": "2019-Datacenter"
                                            },
                                            {
                                                "label": "Windows Server 2019 Gen 1 (smalldisk)",
                                                "description": "Windows Server 2019 with 31 GiB OS disk for generation 1 VM.",
                                                "value": "2019-Datacenter-smalldisk"
                                            }
                                        ]
                                    }
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        "outputs": {
            "parameters": {
                "vnetNewOrExisting": "[steps('virtualNetwork').vnetSection.vnet.newOrExisting]",
                "vnetResourceGroupName": "[steps('virtualNetwork').vnetSection.vnet.resourceGroup]",
                "vnetName": "[steps('virtualNetwork').vnetSection.vnet.name]",
                "vnetAddressPrefix": "[steps('virtualNetwork').vnetSection.vnet.addressPrefix]",
                "subnetName": "[steps('virtualNetwork').vnetSection.vnet.subnets.addsSubnet.name]",
                "subnetAddressPrefix": "[steps('virtualNetwork').vnetSection.vnet.subnets.addsSubnet.addressPrefix]",
                "adminUserName": "[steps('adds').adminAccountSection.adminUserName]",
                "adminPassword": "[steps('adds').adminAccountSection.adminPassword.password]"
            },
            "kind": "ResourceGroup",
            "resourceGroupId": "[steps('basics').resourceScope.resourceGroup.id]",
            "location": "[steps('basics').resourceScope.location.name]"
        }
    }
}
