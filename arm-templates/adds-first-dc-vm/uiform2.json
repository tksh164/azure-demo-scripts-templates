{
    "$schema": "https://schema.management.azure.com/schemas/2021-09-09/uiFormDefinition.schema.json#",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "Deploy a first AD DS domain controller into an existing VNet",
            "steps": [
                {
                    "name": "basics",
                    "label": "Lab setup",
                    "description": "This template will deploy a first AD DS domain controller into an existing virtual network.",
                    "elements": [
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope"
                        },
                        {
                            "name": "adminAccountSection",
                            "type": "Microsoft.Common.Section",
                            "visible": true,
                            "label": "Administrator account for the first AD DS domain controller VM",
                            "elements": [
                                {
                                    "name": "adminAccountSectionText",
                                    "type": "Microsoft.Common.TextBlock",
                                    "visible": true,
                                    "options": {
                                        "text": "Use this administrator account credentials as local administrator account on the first AD DS domain controller VM."
                                    }
                                },
                                {
                                    "name": "adminUserName",
                                    "type": "Microsoft.Compute.UserNameTextBox",
                                    "visible": true,
                                    "label": "Username",
                                    "toolTip": "The administrator username for the first AD DS domain controller VM.",
                                    "osPlatform": "Windows",
                                    "defaultValue": "vmadmin",
                                    "constraints": {
                                        "required": true
                                    }
                                },
                                {
                                    "name": "adminPassword",
                                    "type": "Microsoft.Compute.CredentialsCombo",
                                    "visible": true,
                                    "label": {
                                        "password": "Password",
                                        "confirmPassword": "Confirm password"
                                    },
                                    "toolTip": {
                                        "password": "The administrator password for the first AD DS domain controller VM."
                                    },
                                    "osPlatform": "Windows",
                                    "constraints": {
                                        "required": true
                                    },
                                    "options": {
                                        "hideConfirmation": false
                                    }
                                }
                            ]
                        },
                        {
                            "name": "vnetSection",
                            "type": "Microsoft.Common.Section",
                            "visible": true,
                            "label": "Virtual network for the first AD DS domain controller VM.",
                            "elements": [
                                {
                                    "name": "adminAccountSectionText",
                                    "type": "Microsoft.Common.TextBlock",
                                    "visible": true,
                                    "options": {
                                        "text": "Deploy the first AD DS domain controller VM into this virtual network."
                                    }
                                },
                                {
                                    "name": "vnet",
                                    "type": "Microsoft.Network.VirtualNetworkCombo",
                                    "visible": true,
                                    "scope": {
                                        "subscriptionId": "[steps('basics').resourceScope.subscription.id]",
                                        "resourceGroupName": "[steps('basics').resourceScope.resourceGroup.name]",
                                        "location": "[steps('basics').resourceScope.location.name]"
                                    },
                                    "label": {
                                        "virtualNetwork": "Virtual network",
                                        "subnets": "Subnet"
                                    },
                                    "toolTip": {
                                        "virtualNetwork": "The virtual network to deploy a first AD DS domain controller VM.",
                                        "subnets": "The subnet to deploy a first AD DS domain controller VM."
                                    },
                                    "options": {
                                        "hideExisting": false
                                    },
                                    "defaultValue": {
                                        "name": "adds-vnet",
                                        "addressPrefixSize": "/16"
                                    },
                                    "constraints": {
                                        "minAddressPrefixSize": "/27"
                                    },
                                    "subnets": {
                                        "addsSubnet": {
                                            "label": "Subnet",
                                            "defaultValue": {
                                                "name": "adds",
                                                "addressPrefixSize": "/24"
                                            },
                                            "constraints": {
                                                "minAddressPrefixSize": "/27",
                                                "minAddressCount": 1,
                                                "requireContiguousAddresses": true
                                            }
                                        }
                                    }
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        "outputs": {
            "parameters": {
                "vnetNewOrExisting": "new",
                "vnetResourceGroupName": "addstest",
                "vnetName": "adds-vnet",
                "vnetAddressPrefix": "10.0.0.0/16",
                "subnetName": "adds",
                "subnetAddressPrefix": "10.0.0.0/24",
                "adminUserName": "vmadmin",
                "adminPassword": "[steps('basics').adminAccountSection.adminPassword.password]"
           },
            "kind": "ResourceGroup",
            "resourceGroupId": "[steps('basics').resourceScope.resourceGroup.id]",
            "location": "[steps('basics').resourceScope.location.name]"
        }
    }
}
